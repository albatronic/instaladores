<ul id="accordion" class="menu">
    {% for seccion in values.menuDesplegable %}       
        <li>
            {% if seccion.url.url == "" %} 
                <a onclick>{{seccion.seccion}}</a>   
            {% else %}
                <a href="{{seccion.url.url}}" title="{{seccion.seccion}}">{{seccion.seccion}}</a>
            {% endif %}                        

            {% if seccion.subsecciones | length > 0 %}
                <ul>
                {% for subseccion in seccion.subsecciones %}   
                    <li>
                        <a href="{{subseccion.url.url}}" title="{{subseccion.seccion}}">{{subseccion.seccion}}</a>
                    </li>
                {% endfor %}
                </ul>   
            {% endif %}  
        </li>           
    {% endfor %}                          
</ul>