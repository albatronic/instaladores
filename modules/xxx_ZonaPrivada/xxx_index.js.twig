    $(function(){
        $('#radio3').click(function(){
            $('#particular').css('display','block');
            $('#profesional').css('display','none');            
        });
        $('#radio4').click(function(){
            $('#particular').css('display','none');
            $('#profesional').css('display','block');            
        });  
        
        $('#repitePassword').blur(function(){
            if (this.value != $('#password').val()) {
                $('#repitePassword').addClass('celdaError');
            } else {
                $('#repitePassword').removeClass('celdaError');                
                $('#repitePassword').addClass('celda');                
            }
        });
    });
</script>

