    </article>

    <article>
        <!-- <label>{{values.TEXTS.contrasena}}</label> -->
        <input autocomplete="off" type="password" name="login[Password]" {%if values.login.error == '2'%}class="celdaError"{%else%}class="celda"{%endif%} placeholder="ContraseÃ±a" />
    </article>
   
    <article id="contenedorEnviar">
        <a href="{{app.path}}/olvido" class="olvido">{{values.TEXTS.olvideMiContrasena}}</a>
        <input type="submit" value="{{values.TEXTS.enviar}}" data-type="submit" onclick="$('#formLogin').submit();" title="{{values.TEXTS.enviar}}" class="boton btn_azul right" />
    </article>
