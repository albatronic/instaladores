{% set nThumbnail = values.contenidoDesarrollado.galeriaFotos.bloqueThumbnail|length %}

{% if nThumbnail > 0 %}
<h6 class="baseColor bold">{{values.LABELS.galeriaFotos}}</h6>   
<section class="cajaGris borderTopNegro">
    <ul class="galeria">
        {% for key,galeria in values.contenidoDesarrollado.galeriaFotos.bloqueThumbnail %}
            <li>
                <a href="{{app.path}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall" title="{{galeria.Title}}">
                    <img src="{{app.path}}/{{galeria.PathNameThumbnail}}" alt="{{galeria.Title}}" title="{{galeria.Title}}" />
                </a>
            </li>
        {% endfor %} 
    </ul>

    {% for key,galeria in values.contenidoDesarrollado.galeriaFotos.restoImagenes %}
        <a href="{{app.path}}/{{galeria.PathName}}" rel="gallery" class="pirobox_gall" title="{{galeria.Title}}"></a>
    {% endfor %}
</section>
{% endif %}